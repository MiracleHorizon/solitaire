{
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Aliases */
    "paths": {
      "@public/*": [
        "public/*"
      ],
      "@site/*": [
        "src/site/*"
      ],
      // Basic
      "@router/*": [
        "src/router/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      // Setup
      "__setup__/*": [
        "src/__setup__/*"
      ],
      // Components
      "@pages/*": [
        "src/pages/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@ui/*": [
        "src/components/ui/*"
      ],
      // Assets
      "@assets/*": [
        "src/assets/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ],
      "@audio/*": [
        "src/assets/audio/*"
      ],
      "@styles/*": [
        "src/assets/styles/*"
      ],
      // Shared
      "@shared/*": [
        "src/shared/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@helpers/*": [
        "src/shared/helpers/*"
      ],
      "@entities/*": [
        "src/shared/entities/*"
      ],
      "@app-types/*": [
        "src/shared/types/*"
      ]
    }
  }
}
