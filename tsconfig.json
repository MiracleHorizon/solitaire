{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@public/*": [
        "public/*"
      ],
      // Components
      "@pages/*": [
        "src/pages/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@ui/*": [
        "src/components/ui/*"
      ],
      // Base
      "@router/*": [
        "src/router/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      // Assets
      "@assets/*": [
        "src/assets/*"
      ],
      "@audio/*": [
        "src/assets/audio/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ],
      "@styles/*": [
        "src/assets/styles/*"
      ],
      // Shared
      "@shared/*": [
        "src/shared/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@entities/*": [
        "src/shared/entities/*"
      ],
      "@app-types/*": [
        "src/shared/types/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
